{
  "name": "sendzen-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:public": "pnpm --filter public-app dev",
    "dev:private": "pnpm --filter private-app dev",
    "build:public": "pnpm --filter public-app build",
    "build:private": "pnpm --filter private-app build",
    "build": "pnpm --filter \"./packages/**\" build",
    "dev": "pnpm --parallel --filter \"./packages/**\" dev"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.3"
  }
}
